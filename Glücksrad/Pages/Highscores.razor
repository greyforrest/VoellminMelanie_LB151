@page "/highscores"
@using Glücksrad.Data
@inject FirebaseService firebase
@inject IJSRuntime js


<div class="row">
    <div class="col-9">
        <h1>Highscores</h1>
    </div>
    <div class="col text-right">
        <button onclick="@download" class="btn btn-primary">Herunterladen</button>
    </div>
</div>
@if(allHighscores != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Spieler</th>
                <th>Kontostand</th>
                <th>Runden</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Player highscore in allHighscores)
            {
                    <tr>
                        <td>@highscore.name</td>
                        <td>@highscore.kontostand</td>
                        <td>@highscore.runden</td>
                    </tr>
            }
        </tbody>
    </table>
} else
{
    <p>Loading scores...</p>
}



@code {
    List<Player> allHighscores;

    protected async override void OnInitialized()
    {
        allHighscores = await firebase.getAllHighscores();
        allHighscores.Sort((x, y) => y.kontostand.CompareTo(x.kontostand));
        StateHasChanged();
    }

    private async void download()
    {
        string filename = "highscores.txt";
        string filecontent = "Highscores \n";
        foreach(Player highscore in allHighscores)
        {
            filecontent += highscore.name + ", " + highscore.runden + " Runden, Kontostand " + highscore.kontostand + "\n";
        }

        await js.InvokeAsync<object>("saveAsFile", filename, filecontent);
    }
}
